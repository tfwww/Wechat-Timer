#id-btn-start {
  margin-top: 60px;
  background-color: white;
  width: 130px;
}

#id-btn-start::after {
  border:2px solid #F96A6E;
  border-radius: 45px;
}

#id-btn-start text {
  font-size: 90%;
  color: #F96A6E;
}

.pause-btn {
  background-color: rgba(250, 85, 88, 0.1);
  width: 150px;
}

.pause-btn::after {
  border:2px solid white;
  border-radius:40px;
}

.pause-btn text {
  color: white;
}

.end-btn {
  background-color: rgba(250, 85, 88, 0.1);
  width: 150px;
}

.end-btn::after {
  border:0px;
  border-radius:40px;
}

.end-btn text {
  color: white;
}

